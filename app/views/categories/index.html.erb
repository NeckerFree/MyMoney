<div class="category-container">
   <%if (@categories.any?)%>
        <% @categories.each do |category| %>
            <%= render partial: "shared/category_item", locals: { category: category } %>
        <% end %>        
    <% else %>
        <h5>category records not found!</h5>
    <% end %>
    <%= link_to "New category", new_category_path, class: "link-center" %>
</div>
